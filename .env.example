# .env.example
# ===========================
# ENVIRONMENT SETTINGS
# ===========================
SANDBOX_MODE=true
USE_JWE=false
INCLUDE_CLIENT_CERT_HEADER=true
BIDV_API_VERSION=v1
CHANNEL_ID=ProdChannel

# ===========================
# BIDV API CREDENTIALS (replace with your own)
# ===========================
BIDV_CLIENT_ID=your_client_id_here
BIDV_CLIENT_SECRET=your_client_secret_here
BIDV_API_KEY=your_api_key_here
BIDV_API_SECRET=your_api_secret_here

# ===========================
# ACCOUNT INFO
# ===========================
BIDV_ACCOUNT_NUMBER=your_account_number_here
BIDV_CURRENCY=VND

# ===========================
# OAUTH2 SETTINGS
# ===========================
OAUTH_SCOPE=read
OAUTH_REDIRECT_URI=http://localhost:5000/callback
TOKEN_CACHE_PATH=data/token.json
TOKEN_EXPIRY_BUFFER=60   # seconds before expiry to refresh

# ===========================
# SECURITY SETTINGS
# ===========================
PRIVATE_KEY_PATH=certs/private_key.pem
CLIENT_CERT_PATH=certs/client_cert.pem
SYMMETRIC_KEY_PATH=certs/symmetric.key
TLS_VERIFY=true

# ===========================
# APPLICATION HEADERS
# ===========================
USER_AGENT=BIDVMonitor
CUSTOMER_IP=127.0.0.1   # use localhost or sandbox IP

# ===========================
# TIMEOUTS & RETRIES
# ===========================
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF=5

# ===========================
# LOGGING CONFIG
# ===========================
LOG_LEVEL=INFO
LOG_FILE=logs/bidv_monitor.log
LOG_ROTATE=true
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ===========================
# ALERTING (optional)
# ===========================
ENABLE_ZALO_NOTIFY=false
